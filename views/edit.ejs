<%- include("partials/header") %>

<div class="ui main text container segment">
	<div class="ui huge header">
		Edit Blog : <%=blog.name%>
	</div>
	<form class ="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST"> <!-- Method OVeride npm install method-override for put request -->
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[name]" value="<%=blog.name %>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>">
		</div>
	    <div class="field">
			<label>Content</label>
			<textarea name="blog[post]"><%=blog.post%></textarea>
		</div>
		<input class="ui inverted yellow button" type="submit">
	</form>
	
</div>
<%- include("partials/footer") %>